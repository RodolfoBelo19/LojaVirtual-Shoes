<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_login"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/shape_degrade"
tools:context=".Form.FormLogin">

<EditText
    android:id="@+id/edit_email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_edit_text"
    android:layout_marginTop="250dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:padding="20dp"
    android:inputType="textEmailAddress"
    android:hint="Email"
    android:drawableRight="@drawable/ic_mail"
    android:textColorHint="@color/black"
    />

<EditText
    android:id="@+id/edit_senha"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_edit_text"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:padding="20dp"
    android:inputType="numberPassword"
    android:drawableRight="@drawable/ic_key"
    android:hint="Senha"
    android:textColorHint="@color/black"
    />

<Button
    android:id="@+id/bt_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Login"
    android:background="@drawable/shape_button"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="15dp"
    android:layout_gravity="center"
    />

<TextView
    android:id="@+id/tela_cadastro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="NÃ£o tem cadastro? Crie sua conta aqui"
    android:textAlignment="center"
    android:textColor="@color/branco"
    android:textSize="18sp"
    android:layout_marginTop="30dp"
    android:fontFamily="sans-serif-black"
    android:layout_marginBottom="30dp"
    />


</LinearLayout>

        <FrameLayout
            android:id="@+id/FrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/roxo"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/branco"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carregando..."
                android:textSize="24sp"
                android:layout_marginTop="430dp"
                android:gravity="center"
                android:textColor="@color/branco"
                android:fontFamily="sans-serif-black"/>

        </FrameLayout>

    </FrameLayout>

</androidx.core.widget.NestedScrollView>


